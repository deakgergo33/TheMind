    <title>The Mind</title>
    <script src="/socket.io/socket.io.js"></script>
</head>

<body>

    <br>
    <div class="container">
        <div class="row justify-content-center">
            
            <div class="col-3 text-center" style="border: 1px black solid; height: 100px; position: relative;">
                <div id="1"></div>
                <div style="background-image: url('/img/hatlap2.png'); background-size: cover; height: 80px; width: 84px;
                            transform: translateX(-50%) translateY(-50%); position: absolute; top: 65%; left: 50%;"></div>
            </div>
            <div class="col-1"></div>
            <div class="col-3 text-center" style="border: 1px black solid; height: 100px; position: relative;">
                <div id="0"></div>
                <div style="background-image: url('/img/hatlap2.png'); background-size: cover; height: 80px; width: 84px;
                            transform: translateX(-50%) translateY(-50%); position: absolute; top: 65%; left: 50%;"></div>
            </div>
            <div class="col-1"></div>
            <div class="col-3 text-center" style="border: 1px black solid; height: 100px; position: relative;">
                <div id="2"></div>
                <div style="background-image: url('/img/hatlap2.png'); background-size: cover; height: 80px; width: 84px;
                            transform: translateX(-50%) translateY(-50%); position: absolute; top: 65%; left: 50%;"></div>
            </div>
            
        </div><br>
        <div class="row justify-content-center" style="height: 200px;">
            <div class="col-3 text-center">
                <div style="border: 1px black solid; height: 100px; position: relative;">
                    <div id="3"></div>
                    <div style="background-image: url('/img/hatlap2.png'); background-size: cover; height: 80px; width: 84px;
                            transform: translateX(-50%) translateY(-50%); position: absolute; top: 65%; left: 50%;"></div>
                </div>
                <br>
                <div style="border: 1px black solid; height: 100px; position: relative;">
                    <div id="5"></div>
                    <div style="background-image: url('/img/hatlap2.png'); background-size: cover; height: 80px; width: 84px;
                            transform: translateX(-50%) translateY(-50%); position: absolute; top: 65%; left: 50%;"></div>
                </div>
            </div>
            <div class="col-6" style="position: relative;">
                <div style="width: 130px; height: 200px; background-image: url('/img/card_sample.png'); background-size: cover;
                            position: relative; transform: translateX(-50%) translateY(-50%); position: absolute; top: 50%; left: 50%;">

                    <div id="played_cards" style="font-family: cursive; font-size: 70px; color: black;
                            text-shadow: 1px 0 whitesmoke, -1px 0 whitesmoke, 0 1px whitesmoke, 0 -1px whitesmoke;
                            transform: translateX(-50%) translateY(-50%); position: absolute; top: 50%; left: 50%;">
                            0
                    </div>
                </div>
            </div>
            <div class="col-3 text-center">
                <div style="border: 1px black solid; height: 100px; position: relative;">
                    <div id="4"></div>
                    <div style="background-image: url('/img/hatlap2.png'); background-size: cover; height: 80px; width: 84px;
                            transform: translateX(-50%) translateY(-50%); position: absolute; top: 65%; left: 50%;"></div>
                </div>
                <br>
                <div style="border: 1px black solid; height: 100px; position: relative;">
                    <div id="6"></div>
                    <div style="background-image: url('/img/hatlap2.png'); background-size: cover; height: 80px; width: 84px;
                            transform: translateX(-50%) translateY(-50%); position: absolute; top: 65%; left: 50%;"></div>
                </div>
            </div>
        </div>
        <br>
        <div class="row justify-content-center" style="height: 200px; border: 1px black solid;">
            <div class="col-1">
                <input type="checkbox" id="ready">
            </div>
            <div class="col-4" style="position: relative;">
                <div id="gamefield">
                    
                    <div id="cards"></div>
                </div>
                <div style="width: 130px; height: 200px; background-image: url('/img/card_sample.png'); background-size: cover;
                            position: relative; transform: translateX(-50%) translateY(-50%); position: absolute; top: 50%; left: 50%;" draggable="true">

                    <div id="card1" style="font-family: cursive; font-size: 70px; color: black;
                            text-shadow: 1px 0 whitesmoke, -1px 0 whitesmoke, 0 1px whitesmoke, 0 -1px whitesmoke;
                            transform: translateX(-50%) translateY(-50%); position: absolute; top: 50%; left: 50%;">
                    </div>
                </div>
            </div>
            <div class="col-2">
                <form action="/" method="POST">
                    <input type="hidden" id="player" name="name" value="<%= name %>">
                    <input type="hidden" name="level" id="level" value="<%= level %>">
                    <input type="submit" id="try_again" value="Try again">
                    <input type="submit" id="next_level" value="Next level">
                </form>
            </div>
        </div>
    </div>

    <script src="../socket.js" type="text/javascript">
    </script>
